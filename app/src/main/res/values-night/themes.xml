<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChtGPT" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="android:colorBackground">#1B1F2B</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?android:colorBackground</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AlertDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="titleTextColor">@color/black_white2</item>
        <item name="android:textColor">@color/black_white2</item>
        <item name="android:windowBackground">@color/white_black2</item>
        <item name="android:windowNoTitle">true</item>
        <item name="dialogCornerRadius">@dimen/_10sdp</item>
        <item name="android:radius">@dimen/_10sdp</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/positiveBtnStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/negativeBtnstyle</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/negativeBtnstyle</item>
    </style>
    <!--确定按钮样式-->
    <style name="positiveBtnStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/black_white</item>
    </style>

    <!--取消按钮样式-->
    <style name="negativeBtnstyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/black_white2</item>
    </style>

    <style name="TopSheet" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>

        <item name="android:windowNoTitle">true</item>
        <item name="boxBackgroundColor">@color/white_black2</item>
    </style>

    <style name="ThemeOverlay.ChtGPT.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_900</item>
        <item name="fullscreenTextColor">@color/light_blue_A400</item>
    </style>

</resources>