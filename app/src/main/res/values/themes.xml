<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChtGPT" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AlertDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="titleTextColor">@color/black_white2</item>
        <item name="android:textColor">@color/black_white2</item>
        <item name="android:windowBackground">@color/white_black2</item>
        <item name="android:windowNoTitle">true</item>
        <item name="dialogCornerRadius">@dimen/_10sdp</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/positiveBtnStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/negativeBtnstyle</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/negativeBtnstyle</item>
    </style>
    <!--确定按钮样式-->
    <style name="positiveBtnStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/black_white</item>
    </style>

    <!--取消按钮样式-->
    <style name="negativeBtnstyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/black_white2</item>
    </style>


    <style name="TopSheet" parent="Theme.AppCompat.Dialog">
        <!--<item name="android:windowFrame">@null</item>-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="boxBackgroundColor">@color/white_black2</item>
    </style>

    <style name="Theme.ChtGPT.Fullscreen" parent="Theme.ChtGPT">
        <item name="android:actionBarStyle">@style/Widget.Theme.ChtGPT.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.ChtGPT.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="Theme.ChtGPT.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ChtGPT.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ChtGPT.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>